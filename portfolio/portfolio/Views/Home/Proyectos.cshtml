<div class="container">
        <h1 style="margin-left:43%;">Proyectos</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4" style="margin-top:2%;">
            @foreach (var project in ViewBag.VprojectosMario)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@project.ImageURL" class="card-img-top" alt="imagen proyecto" height= "250">
                        <div class="card-body">
                            <h5 class="card-title">@project.Title</h5>
                            <p class="card-text">@project.Description</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@project.Link" target="_blank"
                            rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
